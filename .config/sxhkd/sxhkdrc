# applications

# launch firefox
ctrl + b
	firefox

# launch ?
ctrl + <key>
	<app>

# launch ?
ctrl + <key>
	<app>

# launch ?
ctrl + <key>
	<app>

# launch ?
ctrl + <key>
	<app>

# controls

# close
ctrl + q
	bspc node -c

# contract
ctrl + super + {Left,Down,Up,Right}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# expand
ctrl + super + {Left,Down,Up,Right}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# focus
ctrl + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# focus workspace
ctrl + shift + {1-9,0}
	bspc node -d {1-9,0}

# kill
ctrl + shift + q
	bspc node -k

# move
ctrl + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# move focused window to workspace
ctrl + {1-9,0}
	bspc desktop -f {1-9,0}

# quit
ctrl + super + q
	bspc quit

# switch window profile
ctrl + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# terminal
ctrl + Return
	alacritty
