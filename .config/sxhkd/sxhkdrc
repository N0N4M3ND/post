# applications

# launch firefox
super + b
	firefox

# launch obs
super + o
	obs

# launch ?
super + <key>
	<app>

# launch ?
super + <key>
	<app>

# launch ?
super + <key>
	<app>

# controls

# close/kill
super + {_,shift + }q
        bspc node -{c,k}

# contract
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# expand
super + alt + ctrl + {Left,Down,Up,Right}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# focus/move window
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# focus workspace/move to workspace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} {1-9,0}

# quit bspwm
super + alt + q
	bspc quit

# switch window profile
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# terminal
super + Return
	alacritty
